<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ui.SelectLocalGameModeActivity">

    <TextView
        android:id="@+id/secondCounterValue"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="20"
        android:textAlignment="center"
        android:textAppearance="@style/GrayText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/firstCounterBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <SeekBar
        android:id="@+id/secondCounterBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="32dp"
        android:max="5"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/juryModeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547" />

    <Button
        android:id="@+id/juryModeButton"
        android:layout_width="265dp"
        android:layout_height="107dp"
        android:background="@drawable/simple_button"
        android:text="ведущий"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="341dp"
        android:layout_height="161dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juryModeButton"
        app:layout_constraintVertical_bias="0.7">

        <Button
            android:id="@+id/greenPlayerButton"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/simple_button"
            android:text="Зелёный стол"
            android:textSize="20sp" />

        <Button
            android:id="@+id/redPlayerButton"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/simple_button"
            android:text="Красный стол"
            android:textSize="20sp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/firstCounterBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="33dp"
        android:max="5"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/juryModeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/firstCounterValue"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:text="20"
        android:textAlignment="center"
        android:textAppearance="@style/GrayText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/firstCounterBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Первый таймер"
        android:textAppearance="@style/GrayText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/firstCounterBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Второй таймер"
        android:textAppearance="@style/GrayText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/secondCounterBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstCounterBar"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="253dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Выберите свою роль"
        android:textAlignment="center"
        android:textAppearance="@style/GrayText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/juryModeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondCounterBar"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDarkGray"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondCounterBar" />

</android.support.constraint.ConstraintLayout>