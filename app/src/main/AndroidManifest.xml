<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbhse.brainring">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.ConcreteComplain"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ui.ComplainActivity" />
        <activity android:name=".ui.Judging" />
        <activity android:name=".ui.PlayerActivity" />
        <activity android:name=".ui.JuryActivity" />

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SelectOnlineOpponentActivity" />
        <activity android:name=".ui.SelectLocalGameModeActivity" />
        <activity
            android:name=".ui.TrainingGameActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.OnlineGameActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.TrainingGamePreparationActivity" />
    </application>

</manifest>